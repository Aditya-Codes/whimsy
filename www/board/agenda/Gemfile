gem 'ruby2js', '>= 2.0.13'
gem 'sinatra'
gem 'nokogumbo'
gem 'execjs', ('<2.5.1' if RUBY_VERSION =~ /^1/)
gem 'listen', ('~> 2.10' if RUBY_VERSION =~ /^1/)
gem 'activesupport'
gem 'mail'

gem 'mime-types', '~> 2.6'

group :test do
  gem 'rspec'
  gem 'capybara'
  gem 'poltergeist'
end

group :demo do
  gem 'puma'
end
