_h1 'PMCs'
_table do
  _tr ng_if: 'is_empty(pmcs)' do
    _th 'loading...'
  end

  _tr ng_repeat: 'pmc in pmcs | orderBy:"display_name"', 
    ng_controller: 'PMCLine' do
    _td do
      _a '{{pmc.display_name}}', href: '{{pmc.link}}'
    end
    _td ng_bind: 'pmc.chair.cn', asf_id: '{{ pmc.chair.uid }}'
    _td '{{ status }}', class: '{{ class }}'
  end
end

