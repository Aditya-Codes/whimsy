_h1 do
  _a '{{pmc.display_name}}', href: 'http://{{pmc.cn}}.apache.org/'
end

_h2 'PMC'

_table do
  _tr ng_repeat: 'person in pmc.members | orderBy:"person.uid"' do
    _td do
      _a href: 'committer/{{ person.uid }}' do
        _span ng_bind: 'person.uid'
      end
    end
    _td ng_bind: 'person.cn', asf_id: '{{ person.uid }}'
    _td ng_bind: 'status(person)'
  end
end

_h2 'Committers'

_table do
  _tr ng_repeat: 'person in pmc.committers | orderBy:"person.uid"' do
    _td do
      _a href: 'committer/{{ person.uid }}' do
        _span ng_bind: 'person.uid'
      end
    end
    _td ng_bind: 'person.cn', asf_id: '{{ person.uid }}'
  end
end
