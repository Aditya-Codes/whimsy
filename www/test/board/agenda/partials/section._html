_footer.navbar.navbar_fixed_bottom class: '{{ item | color }}' do
  _a.backlink.navbar_brand '{{ prev && prev.title }}', rel: 'prev',
    ng_href: '{{ prev && "#" + prev.title }}', ng_if: 'prev'
  _a.nextlink.navbar_brand '{{ next && next.title }}', rel: 'next',
    ng_href: '{{ next && "#" + next.title }}', ng_if: 'next'

end
