_div ng_repeat: 'item in agenda | filter: {shepherd: name}' do
  _h3 class: '{{ item | color }}' do
    _a '{{ item.title }}', ng_href: "{{url(item.title)}}"
  end
  _pre.comments '{{ item.comments }}', ng_if: 'item.comments'
end

_em.col_xs_12 'No items assigned.', 
  ng_show: '(agenda | filter: {shepherd: name}).length == 0'

_h3 class: '{{ actions | color }}', ng_if: 'assigned.length > 0' do
  _a '{{ actions.title }}', ng_href: "{{url(actions.title)}}"

  _div ng_repeat: 'item in assigned' do
    _pre '{{ item }}'
  end
end
