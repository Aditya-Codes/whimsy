_header do
  _h1 'ASF Board Agenda'
end

_table_.table_bordered ng_controller: 'Index' do
  _thead do
    _tr do
      _th 'Attach'
      _th 'Title'
      _th 'Owner'
      _th 'Shepherd'
    end
  end

  _tbody_ do
    _tr ng_repeat: 'item in agenda', class: '{{ item | color }}' do
      _td '{{ item.attach }}'
      _td! do
        _a '{{ item.title }}', ng_href: "#/{{item.title}}"
      end
      _td '{{ item.owner }}'
      _td '{{ item.shepherd }}'
    end
  end
end
