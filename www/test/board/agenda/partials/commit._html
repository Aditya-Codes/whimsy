_div.modal.fade.commit_form! tabindex: -1 do
  _div.modal_dialog ng_controller: 'Commit' do
    _div.modal_content do
      _div.modal_header.blank do
        _button.close "\u00D7", type: 'button', data_dismiss: 'modal'
        _h4.modal_title 'Commit message'
      end

      _div_.modal_body do
        _div_.form_group do
          _label 'Commit message', for: 'commit_text'
          _textarea.form_control.commit_text! :autofocus, rows: 5,
             placeholder: 'commit', ng_model: 'commit_message'
        end
      end

      _div.modal_footer do
        _button.btn.btn_default 'Close', type: 'button', data_dismiss: 'modal'
        _button.btn.btn_primary 'Submit', type: 'button',
          ng_click: "commit()"
      end
    end
  end
end
